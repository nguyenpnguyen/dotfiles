#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(
        (find ~/work ~/personal -mindepth 1 -maxdepth 1 -type d -not -path '*/.git*'; \
        find ~/school -mindepth 3 -maxdepth 3 -type d -not -path '*/.git*') | fzf -m
    )
fi

if [[ -z $selected ]]; then
    exit 0
fi

tmux_running=$(pgrep tmux)

# Process each selected path
for path in $selected; do
    # Create a unique session name by hashing the full path
    selected_name=$(basename "$path" | tr . _)_$(echo -n "$path" | md5sum | cut -d ' ' -f 1)

    if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
        tmux new-session -s $selected_name -c $path
        continue
    fi

    if ! tmux has-session -t=$selected_name 2> /dev/null; then
        tmux new-session -ds $selected_name -c $path
    fi

    if [[ -z $TMUX ]]; then
        tmux attach -t $selected_name
    else
        tmux switch-client -t $selected_name
    fi
done
